    .meta
        position: relative
        padding:        5px
        // border-radius: 0 0 0 4px;
        border-radius: 5px;
        background: #fff

        .meta-one
            padding-bottom: 5px
            border-bottom:    1px solid #e3e3e3

            .user-info
