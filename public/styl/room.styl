#room
    .user-image
        position: absolute

    .meta
        min-height: 50px

        .description
            margin-left: 60px

        .comment
            margin-top:    10px
            white-space: pre-line
            word-wrap:     break-word

    .comments
        margin-top:     15px

        #post-cooment
            margin: 10px

            textarea
                box-sizing:         border-box
                padding:                10px
                border-radius:    4px
                letter-spacing: 1px
                color:                    #666

            .submit
                display:                block
                width:                    90%
                margin:                 10px auto
                padding:                10px
                border-radius:    4px
                font-size:            14px
                font-weight:        bold
                background:         #333
                color:                    #fff
                cursor:                 pointer

        .comments-list
            position: relative
            margin: 2.5em 5px 1em

            .content
                margin-left:    46px

            .comment
                position:             relative;
                padding:                5px 10px 7px;
                min-height:         40px;
                border-radius:    5px;
                margin-top:         10px
                // background:         #FF8C60
                background:         #fff
                // color:                    #fff
                color:              #737373
                text-shadow:        0 0 1px rgba(0,0,0,0.3)

                a
                    display: inline
                    margin-bottom: 5px
                    // font-weight: bold
                    color: #737373

                p
                    white-space:        pre-line
                    word-wrap:            break-word

            .comment:before
                position: absolute;
                display: block;
                width: 0px;
                height: 0px;
                border-style: solid;            cursor:            default

                content: "";
                // border-color: transparent #FF8C60 transparent transparent;
                border-color: transparent #fff transparent transparent;
                left: -13px;
                border-width: 0 13px 13px 0;
                top: 14px;

            .time
                font-size: 9px;

    .like-users
        margin: 20px

        ul
            margin-top: 10px

            li
                display: inline-block
    .edit-form
