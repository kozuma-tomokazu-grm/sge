.header
    position:       relative
    height:         height-tap-3
    line-height:    height-tap-3
    background:    -webkit-linear-gradient(top, #0cbadf, #51d7f4)
    color:             #FFF
    
    a
        color: #FFF

    h1
        // font-size:     font-size-6
        font-size:     font-size-8
        text-align:    center
        font-weight: bold
    
    .logo
        text-indent: 100%
        background:    url(/images/common/logo.png) no-repeat center center
        // background-size: 117px 40px
        background-size: 100px 34px
    nav
        ul,
        .login-btn
            position:         absolute
            top:                    0
            right:                0
            overflow:         hidden
            cursor:             pointer
        .post-btn
            position:         absolute
            top:                    0
            right:                0
            overflow:         hidden
            cursor:             pointer

        .login-btn
            margin:                4px
            height:                30px
            border:                1px solid #F3F3F3
            padding:             0 .5em
            border-width:    2px
            border-radius: 4px
            line-height:     30px
            font-size:         14px
            font-weight:     bold
        .post-btn
            margin:                4px
            height:                30px
            border:                1px solid #F3F3F3
            padding:             0 .5em
            border-width:    2px
            border-radius: 4px
            line-height:     30px
            font-size:         14px
            font-weight:     bold
            
        li
            // border:                1px solid #F3F3F3
            // border-radius: 50%
            // width:                 34px
            width:                 20px
            height:                34px
            margin:                2px
            overflow:            hidden
    
            a
                margin: 2px
                // border-radius: 50%
                
        .back
            position:     absolute
            top:                0
            left:             0
            width:            32px
            height:         32px
            margin:         4px
            background: url(/images/common/icon/arrow-l.png) no-repeat center center
            background-size: 32px
            overflow:     hidden
            cursor:         pointer
        .menu
            position:     absolute
            top:                0
            left:             0
            width:            32px
            height:         32px
            margin:         4px
            background: url(/images/common/global-header/header-menu2.png) no-repeat center center
            background-size: 32px
            overflow:     hidden
            cursor:         pointer
            a
                width:                32px
                height:             32px
                text-indent:     100%
